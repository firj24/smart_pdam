<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"
    android:background="@android:color/white"
    tools:context=".VerificationCode">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="start"
        android:layout_marginStart="25dp"
        android:layout_marginTop="144dp"
        android:fontFamily="@font/popbold"
        android:text="Verification Code"
        android:textColor="@android:color/black"
        android:textSize="24dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewInstructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="We sent you a 4 digit code to your email address. please check and enter your code"
        android:textSize="14sp"
        android:fontFamily="@font/popreg"
        android:layout_marginStart="25dp"
        android:textColor="@android:color/darker_gray"
        android:layout_gravity="start" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="43dp"
        android:layout_gravity="center">

        <EditText
            android:id="@+id/editTextCode1"
            android:layout_width="66dp"
            android:layout_height="88dp"
            android:layout_margin="4dp"
            android:background="@drawable/verification_code_background"
            android:gravity="center"
            android:fontFamily="@font/popsem"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@android:color/black"
            android:textSize="36sp" />

        <EditText
            android:id="@+id/editTextCode2"
            android:layout_width="66dp"
            android:layout_height="88dp"
            android:layout_margin="4dp"
            android:background="@drawable/verification_code_background"
            android:fontFamily="@font/popsem"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@android:color/black"
            android:textSize="36sp" />

        <EditText
            android:id="@+id/editTextCode3"
            android:layout_width="66dp"
            android:layout_height="88dp"
            android:layout_margin="4dp"
            android:background="@drawable/verification_code_background"
            android:fontFamily="@font/popsem"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@android:color/black"
            android:textSize="36sp" />

        <EditText
            android:id="@+id/editTextCode4"
            android:layout_width="66dp"
            android:layout_height="88dp"
            android:layout_margin="4dp"
            android:background="@drawable/verification_code_background"
            android:gravity="center"
            android:fontFamily="@font/popsem"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@android:color/black"
            android:textSize="36sp" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonVerify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verify"
        android:background="@drawable/button"
        android:textColor="@android:color/white"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/popbold"
        android:layout_marginBottom="16dp"
        android:padding="12dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewResend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/popreg"
            android:gravity="center"
            android:layout_marginStart="4dp"
            android:layout_gravity="bottom"
            android:text="Didn't Receive the Code?"
            android:textColor="#575757"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/resend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:fontFamily="@font/popreg"
            android:text=" resend"
            android:textColor="@color/biru"
            android:textSize="14sp"
            android:textStyle="bold"/>

    </LinearLayout>

</LinearLayout>
